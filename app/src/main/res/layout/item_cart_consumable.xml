<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="cartItem"
            type="com.lock.smartlocker.data.models.CartConsumableItem" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/bg_rectangle_rounded"
        android:paddingHorizontal="@dimen/dp_10"
        android:paddingVertical="@dimen/dp_15">

        <LinearLayout
            android:id="@+id/llName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/et_quantity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvItemName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@{cartItem.consumableName}"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tvCollectable"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/segoe_ui_light"
                android:textColor="@color/grey7A7A7A"
                android:text="@{@string/collectable_value(String.valueOf(cartItem.collectable))}"
                android:textSize="@dimen/sp_10" />
        </LinearLayout>

        <EditText
            android:id="@+id/et_quantity"
            style="@style/CustomEditTextStyle"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_35"
            android:layout_marginEnd="@dimen/dp_80"
            android:hint="0"
            android:text="@={cartItem.quantityString}"
            android:inputType="number"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/btnDecrease"
            app:layout_constraintEnd_toStartOf="@+id/btnDecrease"
            app:layout_constraintStart_toEndOf="@+id/llName"
            app:layout_constraintTop_toTopOf="@id/btnDecrease" />

        <Button
            android:id="@+id/btnIncrease"
            style="@style/CustomButton"
            android:layout_marginEnd="15dp"
            android:text="+"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnDecrease"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDecrease"
            style="@style/CustomButton"
            android:text="-"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>