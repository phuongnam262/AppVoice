<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingHorizontal="30dp"
    android:paddingVertical="20dp"
    android:background="@drawable/bg_ractangle_rounded"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvRetrieveStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvModelName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="Asus VivoBook A512"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />


        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvModelName">

            <ImageView
                android:id="@+id/ivArrowLeft"
                android:layout_width="36dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                app:srcCompat="@drawable/arrow_left_icon" />

            <Button
                android:id="@+id/btnLocker"
                style="@style/CustomLockerButton"
                android:layout_marginHorizontal="10dp"
                android:text="001" />

            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="36dp"
                android:layout_height="80dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                app:srcCompat="@drawable/arrow_right_icon" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRetrieveStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETRIEVED"
        android:fontFamily="@font/segoe_ui_regular"
        android:textColor="@color/green009C2C"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>