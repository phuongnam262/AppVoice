<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="isUpdateItem"
            type="Boolean" />

        <variable
            name="isReturnFlow"
            type="Boolean" />

        <variable
            name="itemReturn"
            type="com.lock.smartlocker.data.models.ItemReturn" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rectangle_rounded"
        android:padding="@dimen/dp_20">

        <ImageView
            android:id="@+id/ivModel"
            imageUrl="@{itemReturn.modelImage}"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_130"
            android:background="@drawable/bg_border_rectangle_rounded"
            android:scaleType="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/serialNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivModel">

            <TextView
                android:id="@+id/tvSerialNumberLabel"
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/item_serial_number"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvSerialNumberValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_model_item_info"
                android:fontFamily="@font/segoe_ui_semibold"
                android:letterSpacing="0.05"
                android:padding="@dimen/dp_6"
                android:text="@{itemReturn.serialNumber}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                tools:text="00032021003232" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/modelLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serialNumberLayout">

            <TextView
                android:id="@+id/tvModelLabel"
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/item_model"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvModelValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_model_item_info"
                android:fontFamily="@font/segoe_ui_semibold"
                android:letterSpacing="0.05"
                android:padding="@dimen/dp_8"
                android:text="@{itemReturn.modelName}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                tools:text="SSD 480GB Sandisk E30" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modelLayout">

            <TextView
                android:id="@+id/tvCategoryLabel"
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/item_category"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvCategoryValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_model_item_info"
                android:fontFamily="@font/segoe_ui_semibold"
                android:letterSpacing="0.05"
                android:padding="@dimen/dp_8"
                android:text="@{itemReturn.categoryName}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                tools:text="HARD DISK" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loaneeEmailLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:visibility="@{isReturnFlow ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryLayout">

            <TextView
                android:id="@+id/tvLoaneeEmailLabel"
                android:layout_width="@dimen/dp_115"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/item_loanee_email"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tvLoaneeEmailValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_model_item_info"
                android:fontFamily="@font/segoe_ui_semibold"
                android:padding="@dimen/dp_8"
                android:text="@{itemReturn.loaneeEmail}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_update"
            style="@style/CustomButtonBlack"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/bg_custom_button"
            android:text="@string/update_button"
            android:textColor="@color/text_sub_color"
            android:visibility="@{isUpdateItem ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loaneeEmailLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>