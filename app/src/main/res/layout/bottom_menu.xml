<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="statusText"
            type="String" />

        <variable
            name="showStatusText"
            type="Boolean" />

        <variable
            name="timerHour"
            type="String" />

        <variable
            name="ownerText"
            type="String" />

        <variable
            name="showButtonUsingMail"
            type="Boolean" />

        <variable
            name="enableButtonProcess"
            type="Boolean" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:background="@drawable/bg_radius_white"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{statusText}"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/sp_12"
                android:visibility="@{showStatusText ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_status">

                <RelativeLayout
                    android:id="@+id/rl_menu_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rl_home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:id="@+id/iv_home"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:background="@color/colorWhite"
                            android:scaleType="centerCrop"
                            android:src="@drawable/power_menu_home_icon" />

                        <TextView
                            android:id="@+id/tv_timer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_home"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_7"
                            android:text="@{timerHour}"
                            android:textColor="@color/text_sub_color"
                            android:textSize="@dimen/sp_11" />
                    </RelativeLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="@{showButtonUsingMail ? View.VISIBLE : View.GONE}">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_using"
                        style="@style/CustomButtonBlack"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/using_mail_button" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_menu_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_retry"
                        style="@style/CustomButtonBlack"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:text="@string/retry_button"
                        android:visibility="@{showButtonUsingMail ? View.VISIBLE : View.GONE}"
                        android:layout_centerInParent="true"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_process"
                        style="@style/CustomButtonBlack"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content"
                        android:text="@string/process_button"
                        android:alpha="@{enableButtonProcess ? 1f : 0.3f}"
                        android:enabled="@{enableButtonProcess ? true : false}"
                        android:visibility="@{showButtonUsingMail ? View.GONE : View.VISIBLE}"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/container_menu">

            <include
                layout="@layout/bottom_owner_text"
                app:ownerText="@{ownerText}" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>