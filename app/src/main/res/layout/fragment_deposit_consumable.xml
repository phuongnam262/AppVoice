<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.deposit_consumable.DepositConsumableFragment">

    <data>
        <import type="android.view.View" />
        <variable
            name="locker"
            type="com.lock.smartlocker.data.models.LockerConsumable" />
        <variable
            name="viewmodel"
            type="com.lock.smartlocker.ui.deposit_consumable.DepositConsumableViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:backgroundImage="@{viewmodel.imageBackgroundUrl}"
        android:clickable="true"
        android:focusable="true">

        <include
            android:id="@+id/header_bar"
            layout="@layout/header_navigation"
            app:nameLocker="@{viewmodel.terminalName}"
            app:timer="@{viewmodel.timerString}"
            app:title="@{viewmodel.titlePage}" />

        <TextView
            android:id="@+id/tv_header_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginEnd="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@string/deposit_item_info"
            android:textColor="@color/text_color"
            android:fontFamily="@font/segoe_ui_regular"
            android:textSize="@dimen/sp_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_bar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ll_locker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_radius_white"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_15"
            android:padding="@dimen/dp_15"
            app:layout_constraintTop_toBottomOf="@id/tv_header_info"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/ivArrowLeft"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_45"
                    android:layout_gravity="center_vertical"
                    android:visibility="@{locker.arrowPosition == 1 ? View.VISIBLE : View.INVISIBLE}"
                    app:srcCompat="@drawable/arrow_left_icon" />

                <Button
                    android:id="@+id/btnLocker"
                    style="@style/CustomLockerButton"
                    android:text="@{locker.lockerName}"
                    app:lockerDoorBackground="@{locker.doorStatus}"/>

                <ImageView
                    android:id="@+id/ivArrowRight"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_45"
                    android:visibility="@{locker.arrowPosition == 3 ? View.VISIBLE : View.INVISIBLE}"
                    android:layout_gravity="center_vertical"
                    app:srcCompat="@drawable/arrow_right_icon" />

            </LinearLayout>
            <Button
                android:id="@+id/btnReopen"
                style="@style/CustomButton"
                android:text="@string/reopen_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvConsumables"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/dp_30"
            android:layout_marginVertical="@dimen/dp_20"
            android:clipToPadding="false"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@+id/bottom_menu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_locker"
            tools:listitem="@layout/item_consumable_topup" />

        <include
            android:id="@+id/bottom_menu"
            layout="@layout/bottom_menu_1"
            app:statusText="@{viewmodel.statusText}"
            app:ownerText="@{viewmodel.ownerText}"
            app:showStatusText="@{viewmodel.showStatusText}"
            app:timerHour="@{viewmodel.timerHour}"
            app:showProcessButton="@{viewmodel.showButtonProcess}"
            app:enableButtonProcess="@{viewmodel.enableButtonProcess}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
