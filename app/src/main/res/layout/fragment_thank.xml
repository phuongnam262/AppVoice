<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.thank.ThankFragment">

    <data>

        <variable
            name="viewmodel"
            type="com.lock.smartlocker.ui.thank.ThankViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundImage="@{viewmodel.imageBackgroundUrl}">


        <ImageView
            android:id="@+id/imageView"
            android:layout_marginTop="@dimen/dp_120"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:src="@drawable/icon_successful"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/successful"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_thank_success"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <include
            android:id="@+id/bottom_menu"
            layout="@layout/bottom_menu_3"
            app:statusText="@{viewmodel.statusText}"
            app:ownerText="@{viewmodel.ownerText}"
            app:showStatusText="@{viewmodel.showStatusText}"
            app:isErrorText="@{viewmodel.isErrorText}"
            app:timerHour="@{viewmodel.timerHour}" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for using our service!"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/segoe_ui_bold"
            android:textColor="@color/text_color"
            android:layout_marginTop="@dimen/dp_14"
            android:textSize="@dimen/sp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>