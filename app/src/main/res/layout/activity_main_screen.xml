<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="gmo.demo.voidtask.ui.main.MainScreenViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/main_screen"
            android:textSize="@dimen/sp_40"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dp_100"/>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dp_24"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_400"
            android:layout_marginTop="@dimen/dp_120"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center">

            <Button
                android:id="@+id/btnNhapTuVung"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:text="@string/nhap_tu_vung"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_30" />

            <Button
                android:id="@+id/btnHocTuVung"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:text="@string/hoc_tu_vung"
                android:textSize="@dimen/sp_20"
                android:layout_marginBottom="@dimen/dp_30" />

            <Button
                android:id="@+id/btnKiemTra"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:text="@string/kiem_tra"
                android:textSize="@dimen/sp_20"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>