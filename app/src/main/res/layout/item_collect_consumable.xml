<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewmodel"
            type="com.lock.smartlocker.ui.collect_consumable_item.CollectConsumableItemViewModel" />

        <variable
            name="lockerInfo"
            type="com.lock.smartlocker.data.models.LockerInfoCollect" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/bg_rectangle_rounded"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_10">

        <TextView
            android:id="@+id/tvModelName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:ellipsize="end"
            android:fontFamily="@font/segoe_ui_semibold"
            android:maxLines="2"
            android:text="@{lockerInfo.consumableName}"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_14"
            app:layout_constraintEnd_toStartOf="@+id/btnReopen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SSD 480GB Sandisk E30" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_weight="1"
            android:fontFamily="@font/segoe_ui_regular"
            android:gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_16"
            android:visibility="@{viewmodel.isConfirm ? View.GONE : View.VISIBLE}"
            app:layout_constraintBottom_toBottomOf="@+id/btnReopen"
            app:layout_constraintEnd_toStartOf="@+id/btnReopen"
            app:layout_constraintTop_toTopOf="@+id/btnReopen"
            tools:text="Take 12 item(s)" />

        <Button
            android:id="@+id/btnReopen"
            style="@style/CustomButton"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="0.2"
            android:text="@string/reopen_button"
            android:visibility="@{viewmodel.isConfirm ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnReport"
            style="@style/CustomButton"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_weight="0.2"
            android:text="@string/report_button"
            android:visibility="@{viewmodel.isConfirm ? View.GONE : View.VISIBLE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnReopen" />


        <LinearLayout
            android:id="@+id/llLocker"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvModelName">

            <ImageView
                android:id="@+id/ivArrowLeft"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_vertical"
                android:visibility="@{lockerInfo.arrowPosition == 1 ? View.VISIBLE : View.INVISIBLE}"
                app:srcCompat="@drawable/arrow_left_icon" />

            <Button
                android:id="@+id/btnLocker"
                style="@style/CustomLockerButton"
                android:text="@{lockerInfo.lockerName}"
                app:lockerDoorBackground="@{lockerInfo.doorStatus}"
                tools:text="001" />

            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_vertical"
                android:visibility="@{lockerInfo.arrowPosition == 3 ? View.VISIBLE : View.INVISIBLE}"
                app:srcCompat="@drawable/arrow_right_icon" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_current_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_10"
            android:visibility="@{viewmodel.isConfirm ? View.GONE : View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llLocker">

            <TextView
                android:id="@+id/tvQuantityLable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/current_quantity_number"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_current_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:fontFamily="@font/segoe_ui_semibold"
                android:text="@{String.valueOf(lockerInfo.currentQuantity) + '/' + String.valueOf(lockerInfo.setPoint)}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="@{viewmodel.isConfirm ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/llLocker"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/llLocker">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/you_take"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/et_take_number"
                style="@style/CustomEditTextStyle"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_35"
                android:textSize="@dimen/sp_14"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:hint="0"
                android:inputType="number"
                android:text="@={lockerInfo.takeNumberString}"
                android:textAlignment="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoe_ui_regular"
                android:text="@string/items"
                android:textColor="@color/text_color"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>