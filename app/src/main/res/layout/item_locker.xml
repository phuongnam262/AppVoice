<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="locker"
            type="com.lock.smartlocker.data.models.Locker" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_ractangle_rounded"
        android:layout_marginVertical="@dimen/dp_5"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_locker_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_regular"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_locker_info">

            <ImageView
                android:id="@+id/ivArrowLeft"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_vertical"
                android:visibility="invisible"
                app:srcCompat="@drawable/arrow_left_icon" />

            <Button
                android:id="@+id/btnLocker"
                style="@style/CustomLockerButton"
                android:background="@{locker.doorStatus == 0 ? @drawable/bg_custom_locker_success_button : @drawable/bg_custom_locker_failed_button}"
                android:text="@{locker.name}" />

            <ImageView
                android:id="@+id/ivArrowRight"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_50"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:visibility="invisible"
                app:srcCompat="@drawable/arrow_right_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="@string/available"
            android:textColor="@color/green009C2C"
            android:textSize="@dimen/sp_12"
            android:layout_marginEnd="@dimen/dp_17"
            app:layout_constraintBottom_toBottomOf="@+id/tv_locker_info"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_locker_info" />

        <Button
            android:id="@+id/btn_disable"
            style="@style/CustomButton"
            android:layout_width="@dimen/dp_80"
            android:backgroundTint="@color/redD0000E"
            android:text="@string/disable_button"
            android:textColor="@color/colorWhite"
            android:enabled="@{locker.lockerAction == 2}"
            android:alpha="@{locker.lockerAction == 3 ? 0.5f : 1}"
            android:visibility="@{(locker.lockerAction == 2 || locker.lockerAction == 3) ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3" />

        <Button
            android:id="@+id/btn_enable"
            style="@style/CustomButton"
            android:layout_width="@dimen/dp_80"
            android:backgroundTint="@color/colorBlue"
            android:text="@string/enable_button"
            android:textColor="@color/colorWhite"
            android:visibility="@{locker.lockerAction == 1 ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/linearLayout3" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>