<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="userLocker"
            type="com.lock.smartlocker.data.models.UserLockerModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/bg_rectangle_rounded"
        android:paddingHorizontal="@dimen/dp_15"
        android:paddingVertical="@dimen/dp_15">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/dp_15"
            app:layout_constraintEnd_toStartOf="@+id/btnRemove"
            app:layout_constraintStart_toEndOf="@+id/cvAvatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui_semibold"
                android:maxLines="1"
                android:visibility="@{userLocker.personName != null ? View.VISIBLE : View.GONE}"
                android:text="@{userLocker.personName}"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/sp_14"
                tools:text="hello@gmail.com" />

            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:fontFamily="@font/segoe_ui_light"
                android:maxLines="1"
                android:layout_marginTop="@dimen/dp_3"
                android:visibility="@{userLocker.email.equals(userLocker.personName) ? View.GONE : View.VISIBLE}"
                android:text="@{userLocker.email}"
                android:textColor="@color/colorBlack"
                android:textSize="@{userLocker.personName != null ? @dimen/sp_12 : @dimen/sp_14}"
                tools:text="hello@gmail.com" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRemove"
            style="@style/CustomButton"
            android:text="@string/remove_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAvatar"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            app:cardCornerRadius="@dimen/dp_15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" >
            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:scaleType="centerCrop"
                android:background="@drawable/avatar" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>