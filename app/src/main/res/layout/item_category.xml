<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="category"
            type="com.lock.smartlocker.data.models.Category" />

        <variable
            name="isSelected"
            type="Boolean" />

        <variable
            name="viewModel"
            type="com.lock.smartlocker.ui.category.CategoryViewModel" />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/bg_rounded_corner_white"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:padding="12dp"
        tools:ignore="TouchTargetSizeCheck"
        android:onClick="@{() -> viewModel.onCategorySelected(category.categoryId)}">

        <TextView
            android:id="@+id/categoryTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_regular"
            android:text="@{category.categoryName}"
            android:textColor="@{isSelected ? @color/colorBlack : @color/grey575757 }"
            android:textSize="@dimen/sp_20"
            android:textStyle="@{isSelected ? `bold` : `normal`}" />

    </LinearLayout>
</layout>
