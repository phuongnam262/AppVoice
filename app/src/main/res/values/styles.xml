<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="CustomButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/dp_7</item>
        <item name="android:paddingBottom">@dimen/dp_7</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_custom_button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/segoe_ui_regular</item>
    </style>

    <style name="CustomLockerButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">@dimen/dp_90</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/dp_7</item>
        <item name="android:paddingBottom">@dimen/dp_7</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/bg_locker_close</item>
        <item name="backgroundTint">@null</item>
        <item name="android:fontFamily">@font/segoe_ui_bold</item>
        <item name="android:layout_marginHorizontal" tools:ignore="NewApi">@dimen/dp_7</item>
    </style>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomButtonBlack" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button_gray</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/dp_18</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:inputType">text</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="CustomImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="MenuDashboardText">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>