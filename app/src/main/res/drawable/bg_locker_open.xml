<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6E5E5" /> <!-- Màu khi button được nhấn -->
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#CBC7C7" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFAEA3" /> <!-- Màu nền khi button không được nhấn -->
            <corners android:radius="10dp"/>
            <stroke
                android:width="1dp"
                android:color="#CBC7C7" />
        </shape>
    </item>
</selector>